<Window x:Class="MasterFloorAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterFloorAPP"
        mc:Ignorable="d"
        Title="Мастер пол" Height="800" Width="1280" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1"/>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
            <Button x:Name="BtnPartners" Content="Партнеры" Grid.Row="2" Width="100" Height="30" FontSize="16" Click="BtnPartners_Click" Margin="0 0 10 0" />
            <Button x:Name="BtnSales" Content="Продажи" Grid.Row="2" Width="100" Height="30" FontSize="16" Click="BtnSales_Click" Margin="0 0 10 0" />
            <Button x:Name="BtnDiscounts" Content="Скдики" Grid.Row="2" Width="100" Height="30" FontSize="16" Click="BtnDiscounts_Click" />
        </StackPanel>

    </Grid>
</Window>
